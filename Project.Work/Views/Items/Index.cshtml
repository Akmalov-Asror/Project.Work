@model List<Project.Work.Entities.Items>

@{
    ViewData["Title"] = "Items Page";
}

<table class="table table-striped table-bordered table-hover" style="max-width: 100%;">
    @{

        if (Model is not null)
        {
            var counter = 1;
            <thead>
            <tr>
                <th>#</th>
                <th>Amount</th>
                <th>Category</th>
                <th>Date</th>
                <th>Comment</th>
                <th> Edit</th>
                <th>Delete</th>
            </tr>
            </thead>

            foreach (var expense in Model)
            {
                counter++;
                <tbody>
                <tr>
                    <td>
                        @counter
                    </td>
                    <td>
                        @expense.Amount
                    </td>

                    <td>
                            @expense.Category!.CategoryName
                    </td>

                    <td>
                        @expense.Created_Date
                    </td>

                    <td>
                        @expense.Comment
                    </td>
                    <td>
                            <a asp-action="UpdateItems" class="btn btn-sm btn-warning">Edit</a>
                    </td>
                    <td>
                            <a class="btn btn-sm btn-danger" asp-route-id="@expense.Id" asp-action="DeleteItems" asp-controller="Items">Delete</a>
                    </td>
                </tr>
                </tbody>
            }
        }
    }
</table>